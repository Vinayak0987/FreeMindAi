# Backend Configuration
# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/freemind-ai
# Or for local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/freemind-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Cloudinary Configuration (Required for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4028

# Vercel Configuration (for production)
VERCEL_URL=your-app.vercel.app

# Frontend Environment Variables
# Development API URL
VITE_API_URL=http://localhost:3000/api

# Authentication
VITE_GOOGLE_CLIENT_ID=google_oauth_client_id

# API Keys (Replace with your actual keys)
VITE_OPENAI_API_KEY=openai_api_key
VITE_GEMINI_API_KEY=gemini_api_key
VITE_ANTHROPIC_API_KEY=anthropic_api_key
VITE_GOOGLE_ANALYTICS_ID=ga4_tracking_id
VITE_ADSENSE_ID=adsense_publisher_id
VITE_PERPLEXITY_API_KEY=perplexity_api_key
VITE_STRIPE_PUBLISHABLE_KEY=stripe_publishable_key
